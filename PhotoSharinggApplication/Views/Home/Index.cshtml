@model List<SharePhoto>

<div class="main-content">
    <div class="wrap-banner">
        <!-- slide-show -->
        <div class="slideshow">
            <div class="tiva-slideshow-wrapper">
                <div id="tiva-slideshow" class="nivoSlider">
                    <a href="#" title="Slideshow image">
                        <img class="img-responsive" src="~/home/img/home/home1.jpg" title="#caption1" alt="Slideshowimage">
                    </a>
                    <a href="#" title="Slideshow image">
                        <img class="img-responsive" src="~/home/img/home/home3-banner3.jpg" title="#caption2" alt="Slideshowimage">
                    </a>
                    <a href="#" title="Slideshow image">
                        <img class="img-responsive" src="~/home/img/home/home3-banner.jpg" title="#caption3" alt="Slideshowimage">
                    </a>
                </div>
                <div id="caption1" class="nivo-html-caption">
                    <div class="tiva-caption">
                        <div class="left-right hidden-xs">
                            <p class="caption-1">
                                "Jangan Pernah <span>Menganggap</span> Remeh Seseorang"
                            </p>
                        </div>
                    </div>
                </div>
                <div id="caption2" class="nivo-html-caption caption">
                    <div class="tiva-caption">
                        <div class="left-right hidden-xs">
                            <p class="caption-2">
                                <span class="text-1">"Santai sejenak</span>
                                <span class="text-2">Untuk menghadapai</span>
                                <span class="text-3">Hari esok"</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div id="caption3" class="nivo-html-caption caption">
                    <div class="left-right hidden-xs">
                        <div class="tiva-caption">
                            <p class="caption-3">
                                <span class="text-1">"Mungkin</span>
                                <span class="text-2">Cukup dengan</span>
                                <span class="text-3">Duduk saya bisa berpikir"</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- main -->
    <div id="wrapper-site">
        <div id="content-wrapper" class="full-width">
            <div id="main">
                <section class="page-home">
                    <!-- banner -->
                    <div class="section spacing-10 group-image-special">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="effect">
                                    <a href="#">
                                        <img class="img-fluid width-100" src="~/home/img/home/home2-saya.jpg" alt="banner-2" title="banner-2">
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="effect">
                                    <a href="#">
                                        <img class="img-fluid width-100" src="~/home/img/home/home3-saya.jpg" alt="banner-2" title="banner-2">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="container">
        <h1 class="text-center">Photos</h1>
        <div class="row">
            @foreach (var photo in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-img-top hover-effect">
                            <img src="~/upload/@photo.Photo" alt="@photo.JudulPhoto" class="card-img-top hover-zoom">
                        </div>
                        <div class="card-body">
                            <p class="card-text">@photo.NamaPengunggah</p>
                            <h5 class="card-title">@photo.JudulPhoto</h5>
                            <p class="card-text">@photo.Deskripsi</p>
                            <p>@photo.Status.Name</p>
                            <p class="card-text"><small class="text-muted">@photo.TanggalUpload.ToShortDateString()</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
