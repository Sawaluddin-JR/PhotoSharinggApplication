@using PhotoSharinggApplication.Models.ViewModel;
@model User;
@{
    Layout = "_LayoutAkun";
}
<title>SADILgram - Sign Up</title>
<div id="content" class="page-content">
    <div class="register-form text-center">
        <h1 class="text-center title-page">Create Account</h1>
        <form enctype="multipart/form-data" action="SignUp" method="post">
            <div>
                <div class="form-group">
                    <div>
                        <input class="form-control" name="Name" type="text" placeholder="Full Name">
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input name="Email" class="form-control" type="email" placeholder="Email">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input class="form-control" name="Username" type="text" placeholder="Username">
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <div>
                            <input class="form-control" name="Password" type="password" placeholder="Password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="clearfix">
                <div>
                    <button class="btn btn-primary" type="submit">
                        Create Account
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>