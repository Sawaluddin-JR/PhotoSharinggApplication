@using PhotoSharinggApplication.Models.ViewModel;
@model User
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Tambah Data</h1>
    <p class="mb-4"></p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Data</h6>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" action="DaftarAdmin" method="post">
                <div class="form-group">
                    <label name="Name">Nama Lengkap</label>
                    <input type="text" name="Name" class="form-control" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Name">Email</label>
                    <input type="email" name="Email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label name="Username">Username</label>
                    <input type="text" name="Username" class="form-control" required>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Password">Password</label>
                    <input type="password" name="Password" class="form-control" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-info">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>